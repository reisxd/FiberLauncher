<div id="registerContainer" style="display: none;">
    <link type="text/css" rel="stylesheet" href="./assets/css/register.css">
    <div id="registerCancelContainer" style="display: none;">
        <button id="registerCancelButton">
            <div id="registerCancelIcon">X</div>
            <span id="registerCancelText">İptal</span>
        </button>
    </div>
    <div id="registerContent">
        <form id="registerForm">
            <img id="registerImageSeal" src="assets/images/SealCircle.png"/>
            <span id="registerSubheader">FİBER REGİSTER</span>
            <div class="registerFieldContainer">
                <svg id="profileSVG" class="registerSVG" viewBox="40 37 65.36 61.43">
                    <g>
                        <path d="M86.77,58.12A13.79,13.79,0,1,0,73,71.91,13.79,13.79,0,0,0,86.77,58.12M97,103.67a3.41,3.41,0,0,0,3.39-3.84,27.57,27.57,0,0,0-54.61,0,3.41,3.41,0,0,0,3.39,3.84Z"/>
                    </g>
                </svg>
                <span class="registerErrorSpan" id="registerEmailError">* Geçersiz değer</span>
                <input id="registerUsername" class="registerField" type="text" placeholder="EMAIL OR USERNAME"/>
            </div>
            <div class="registerFieldContainer">
                <svg id="lockSVG" class="registerSVG" viewBox="40 32 60.36 70.43">
                    <g>
                        <path d="M86.16,54a16.38,16.38,0,1,0-32,0H44V102.7H96V54Zm-25.9-3.39a9.89,9.89,0,1,1,19.77,0A9.78,9.78,0,0,1,79.39,54H60.89A9.78,9.78,0,0,1,60.26,50.59ZM70,96.2a6.5,6.5,0,0,1-6.5-6.5,6.39,6.39,0,0,1,3.1-5.4V67h6.5V84.11a6.42,6.42,0,0,1,3.39,5.6A6.5,6.5,0,0,1,70,96.2Z"/>
                    </g>
                </svg>
                <span class="registerErrorSpan" id="registerPasswordError">* Gerekli</span>
                <input id="registerPassword" class="registerField" type="password" placeholder="PASSWORD"/>
            </div>
            <div id="registerOptions">
                <span class="registerSpanDim">
                </span>
                <label id="checkmarkContainer">
                    <input id="registerRememberOption" type="checkbox" checked>
                    <span id="registerRememberText" class="registerSpanDim">beni hatırla?</span>
                    <span class="registerCheckmark"></span>
                </label>
            </div>
            <button id="registerButton">
                <div id="registerButtonContent">
                    KAYIT OL
                    <svg id="registerSVG" viewBox="0 0 24.87 13.97">
                        <defs>
                            <style>.arrowLine{fill:none;stroke:#FFF;stroke-width:2px;transition: 0.25s ease;}</style>
                        </defs>
                        <polyline class="arrowLine" points="0.71 13.26 12.56 1.41 24.16 13.02"/>
                    </svg>
                    <div class="circle-loader">
                        <div class="checkmark draw"></div>
                    </div>
                    <!--<div class="spinningCircle" id="registerSpinner"></div>-->
                </div>
            </button>
            <div id="registerDisclaimer">
                <span class="registerSpanDim" id="registerRegisterSpan">
                </span>
                <p class="registerDisclaimerText"> </p>
                <p class="registerDisclaimerText">Fiber Launcher is not affiliated with Mojang AB.</p>
            </div>
        </form>
    </div>
    <script src="./assets/js/scripts/register.js"></script>
</div>